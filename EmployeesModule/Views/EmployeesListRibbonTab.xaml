<RibbonTab x:Class="EmployeesModule.Views.EmployeesListRibbonTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmployeesModule.Views"
             mc:Ignorable="d" 
             d:DesignWidth="800"
             Header="Pracownicy"
             xmlns:prism="http://prismlibrary.com/"
             IsSelected="{Binding IsTabSelected}"
             ContextualTabGroupHeader="Pracownicy">
    <RibbonGroup>
        <RibbonButton LargeImageSource="pack://application:,,,/Images/add.png" Label="Dodaj"/>
        <RibbonButton LargeImageSource="/Images/delete.png" Label="Usuń" IsEnabled="{Binding DeleteButtonState}" Command="{Binding RemoveEmployeeCommand}" />
        <RibbonButton LargeImageSource="pack://application:,,,/Images/quit.png" Label="Zamknij" Command="{Binding ExitViewCommand}" />
    </RibbonGroup>
</RibbonTab>
